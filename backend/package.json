{
  "name": "convooy-backend",
  "version": "1.0.0",
  "description": "Backend API for Convooy trip sharing",
  "main": "dist/app.js",
  "scripts": {
    "dev": "docker compose up -d postgres redis && yarn db:push && tsx watch src/app.ts",
    "dev:stop": "docker compose down",
    "build": "npx tsc",
    "start": "node dist/app.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "pretest": "./scripts/ensure-test-db.sh",
    "test": "NODE_ENV=test jest",
    "test:watch": "./scripts/ensure-test-db.sh && NODE_ENV=test jest --watch",
    "test:coverage": "./scripts/ensure-test-db.sh && NODE_ENV=test jest --coverage",
    "test:setup": "./scripts/setup-test-db.sh"
  },
  "keywords": [
    "navigation",
    "trip-sharing",
    "api"
  ],
  "author": "Convooy Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "nanoid": "^3.3.7",
    "prisma": "^6.0.0",
    "qrcode": "^1.5.3",
    "socket.io": "^4.7.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^24.8.0",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
